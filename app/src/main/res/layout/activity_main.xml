<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab05.MainActivity">


    <TextView
        android:text="AccelXValue:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="107dp"
        android:id="@+id/AccelXText" />

    <TextView
        android:text="XValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/AccelXText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="81dp"
        android:id="@+id/AccelXValue" />

    <TextView
        android:text="YValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/AccelYText"
        android:layout_alignStart="@+id/AccelXValue"
        android:id="@+id/AccelYValue" />

    <TextView
        android:text="ZValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/AccelZText"
        android:layout_alignStart="@+id/AccelYValue"
        android:id="@+id/AccelZValue" />

    <Switch
        android:text="On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AccelXValue"
        android:layout_toStartOf="@+id/AccelXValue"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/switch1" />

    <TextView
        android:text="AccelYValue:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/AccelYText"
        android:layout_below="@+id/AccelXText"
        android:layout_alignEnd="@+id/AccelXText" />

    <TextView
        android:text="AccelZValue:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/AccelZText"
        android:layout_below="@+id/AccelYText"
        android:layout_alignStart="@+id/AccelYText" />

    <TextView
        android:text="Lattitude: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AccelZText"
        android:layout_alignStart="@+id/AccelZText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="75dp"
        android:id="@+id/LatText" />

    <TextView
        android:text="LongText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/Longitude:"
        android:layout_below="@+id/LatText"
        android:layout_alignStart="@+id/LatText" />

    <TextView
        android:text="LAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LatText"
        android:layout_alignStart="@+id/AccelZValue"
        android:id="@+id/LatValue" />

    <TextView
        android:text="LONG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LongValue"
        android:layout_alignBaseline="@+id/Longitude:"
        android:layout_alignBottom="@+id/Longitude:"
        android:layout_alignStart="@+id/LatValue" />
</RelativeLayout>
